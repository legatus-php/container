{
    "name": "legatus/container",
    "description": "Flexible and simple PSR-11 dependency injection container",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matias Navarro Carter",
            "email": "contact@mnavarro.dev"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Legatus\\Support\\": ["src/container", "src/config", "src/arguments", "src/definitions"]
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Legatus\\Support\\":  ["tests/container", "tests/config", "tests/arguments", "tests/definitions"]
        }
    },
    "require": {
        "php": ">=7.4",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.7"
    },
    "scripts": {
        "lint": "php-cs-fixer fix --ansi",
        "ci:style": "php-cs-fixer fix --dry-run -vvv --ansi",
        "ci:unit": "phpunit --testdox --coverage-text",
        "ci:types": "psalm",
        "ci": [
            "@ci:types",
            "@ci:unit",
            "@ci:style"
        ]
    }
}
